{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double",
						{ "allowTemplateLiterals": true }
        ],
        "semi": [
            "error",
            "always"
        ],
				"no-unused-vars": ["error", {
					"argsIgnorePattern": "^_"
				}]
    }
}
